/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.lists{
  flex: 1;
  text-align: center;
  height: 0;
}
.titleBar {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 0 10rpx -10rpx;
  align-items: center;
}
.titleBar .status {
  flex: 1;
}
.titleBar .status .add{
  overflow: hidden;
}
.titleBar .status .add button {
  margin: 0;
  float: right;
}
.titleBar .status text {
  display: inline;
  font-size: 12pt;
  padding: 10rpx -20rpx -10rpx 0;
  margin-right: 15rpx;
}
.titleBar .status text.active {
  color: red;
  border-bottom: 1px solid red;
}
.nodata {
  padding: 30rpx;
  font-size: 11pt;
  text-align: center;
  font-style: italic;
}
