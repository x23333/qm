/**index.wxss**/

.ads image {
  width: 100%;
  height: 100%;
}

/*---icon start---*/
.icons {
  display: table;
  margin: 0 auto 53rpx;
  width: 92%;
  font-size: 0;
  text-align: center;
}

.icons .icon {
  display: inline-block;
  margin-top: 40rpx;
  width: 25%;
}
.icons .icon image{
  height:76rpx;
  width:76rpx;
}

.icons .icon text{
  display: inline-block;
  width: 100%;
  margin-top: 16rpx;
  text-align: center;
  font-size: 28rpx;
}

/*---icon end---*/


/* --------------- */



.courses :nth-child(even){
  margin-right: 0%;
}

 .course{
  width: 48.7%;
  margin-bottom: 45rpx;  
  display: inline-block;
  margin-right: 2.6%;
  vertical-align: top;
}

.course_big{
  width: 100%;
  margin-bottom: 45rpx;  
  display: inline-block;
}
.courses .course-image_big{
  width: 100%;
  height: 296rpx;
}

 .course-image, .course-title, .course-price{
  width: 100%;

}
 .course-image{
  height: 190rpx;
}

 .course-title{
  display: inline-block;
  margin-top: 0.2rem;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #3c4a55;
}

 .course-price{
  width: 100%;
  color: #ff632a;
  margin-top: 10rpx;
  font-size: 32rpx;
} 