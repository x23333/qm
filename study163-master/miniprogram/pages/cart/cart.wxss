navigator{
    display: inline-block;
    position: fixed;
}

.total-count{
    padding-left: 20rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 24rpx;
    color: #3C4A55;
}

.org {
width: 100%;    
}

.org-head {
    width: 100%;  
    background: #F7F9FC;
    height: 64rpx;   
    padding-left: 20rpx;
}

.org-head text {
    font-size: 24rpx;
    padding-left:22rpx; 
    color: #3C4A55;
}




.courses .course{
    padding-left: 20rpx; 
    padding-top:24rpx;
    padding-bottom: 20rpx;
}

.course-check,.course-img,.course-ctx,.course-del{
    display: inline-block;
    vertical-align: top;
    font-size: 0;
}



.check-img{
    width: 30rpx;
    height: 30rpx;

}

.check-img.hd{
    position: relative;
    top: 8rpx;
}
.check-img.bd{
    vertical-align: top; 
}


.course-img{
    width: 194rpx;
    height: 108rpx;
    margin-left: 22rpx; 
    margin-right: 14rpx;
    /* 
    margin-top: 20rpx;
     */
}


.course-ctx{
    width: 392rpx;
    margin-right: 10rpx;
}

.ctx-title{
    line-height: 1.3;
    font-size: 28rpx;
    color: #3C4A55;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical
}
.ctx-time{
    margin: 10rpx 0;
    color: #8891A7;
    font-size: 18rpx;
}
.ctx-price{
    font-size: 24rpx;
    color: #3C4A55;
}

.course-del {
    position: relative;
    top:40rpx;
    right: 0;
    font-size: 24rpx;

    color: #99A4BF;
}

.all{
    padding-bottom:96rpx ;
}

.org-divide {
    position: relative;
    margin: 0 auto;
    height: 1px;
    width: 94%;
    margin-top: 10px;
    background: #E6EAF2;
}

.org-count{
    font-size: 26rpx;
    padding: 15px 10px;
    text-align: right;
    color: #70788C;
}

.org-count-price{
    color: #FF4400;
    font-size: 28rpx;
}
.org-sep {
    background: #EDEFF2;
    height: 8px;
}

.total-price{
    height: 96rpx;
    width: 100%;
    background-color: #fff;
    padding-left: 20rpx;
    position: fixed;
    bottom: 0;
}

.tips{
    
     
    color: #3C4A55;
    text-align: right;
    font-size: 24rpx;   
    padding: 14rpx 220rpx 0 48rpx;
    box-sizing: border-box;
    
    float: right;
}
.tips .tip1 .price{
    display: inline-block;
    color: #FF4400;
}
.tips .tip2{
    display: inline-block;
    line-height: 1.4;
    margin-top: 8rpx;
}

.pay-btn {
    display: inline-block;
    background: #CED1DA;
    width: 180rpx;
    height: 100%;
    color: #fff;
    font-size: 14px;
    line-height: 96rpx;
    text-align: center;
    position: fixed;
    right: 0;
}

.pay-btn.active{
    background: #FF632A; 
}


/* ---empty--- */


.empty {
    width: 600rpx;
    position: absolute;
    top: 40%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

