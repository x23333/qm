.container {
  padding: 25rpx;
  background: #fff;
}
.card.col-50 {
  float: left;
  text-align: center;
  width: 47.333%;
  margin-right: 10rpx;
}
.card.col-50:nth-child(odd) {
  float: right;
  margin-left: 10rpx;
}
image {
  width: 100%;
}
.title {
  color: #727272;
  font-size: 26rpx;
  text-overflow: ellipsis;
}
.price {
  color: #fc5600;
  font-size: 26rpx;
}
.footer {
  width: 100%;
  height: 50rpx;
  text-align: center;
  background: #eee;
  padding: 40rpx 0;
  color: #9c9c9c;
}
