.card_container {
  width: 100%;
  border-top: 1px solid #e5e5e5;
  margin: 10rpx 0 40rpx 20rpx;
  padding: 20rpx;
  display: flex;
  overflow: hidden;
  background-color: #fff;
}
.card_selected {
  width: 64rpx;
  position: relative;
  margin-right: 10rpx;
}
.card_choose  {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
.card_img {
 width: 200rpx;
 height: 200rpx;
 margin-right: 20rpx;
 background-color: #ffffff;
}
.card_img image {
  width: 100%;
  height: 100%;
}
.card_detail {
  flex: 1;
  position: relative;
}
.card_detail_name {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24px;
}
.card_detail_num {
  position: absolute;
  bottom: 0;
  left: 0;
}
.card_detail_price {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24px;
  color: red;
}
.cart-no-data {
  padding: 40rpk;
  color: #999999;
  text-align: center;
}